---
// Retaining minimal component logic to apply dark mode classes to the footer element
export interface Props {
  theme?: string;
}

const { theme = 'light' } = Astro.props;
---

<footer class:list={[{ dark: theme === 'dark' }, 'relative border-t border-gray-200 dark:border-slate-800 not-prose']}>
  <div class="dark:bg-dark absolute inset-0 pointer-events-none" aria-hidden="true"></div>

  <div
    class="relative max-w-7xl mx-auto px-4 sm:px-6 dark:text-slate-300"
  >
    <div class="flex items-center justify-center py-6 md:py-8">
      <div class="text-xs sm:text-sm text-center leading-relaxed dark:text-muted">
        <p class="mb-1 opacity-75">&copy; 2025 Melwy</p>
        <p class="mb-1 opacity-75">5 Parv. Alan Turing, 75013 Paris, France</p>
        <p class="mb-1">
          Contact: 
          <a 
            href="mailto:info@melwy.com"
            class="hover:underline text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white"
          >
            info@melwy.com
          </a>
        </p>
        <p>
          <a 
            href="/privacy" 
            class="hover:underline text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white"
          >
            Privacy Policy
          </a>
        </p>
      </div>
    </div>
  </div>
</footer>
